<p id="notice"><%= notice %></p>

<h1 class="my-4">Animals</h1>

<%= will_paginate @animals, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

<table class="table table-light table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Outcome Type</th>
      <th>Outcome Subtype</th>
      <th>Animal Type</th>
      <th>Sex</th>
      <th>Breed</th>
      <th>Color</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.id %></td>
        <td><%= animal.name %></td>
        <td><%= animal.birthday %></td>
        <td><%= animal.outcometype %></td>
        <td><%= animal.outcomesubtype %></td>
        <td><%= animal.animaltype %></td>
        <td><%= animal.sex %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.color %></td>
        <td>
          <span class="text-nowrap">
          <%= link_to animal, :class => "hidden mr-1" do %>
            <i class="material-icons">description</i>
          <% end %>

          <%= link_to edit_animal_path(animal), :class => "hidden mr-1" do %>
            <i class="material-icons text-success">edit</i>
          <% end %>

          <%= link_to animal, method: :delete, data: { confirm: 'Are you sure?' }, :class => "hidden" do %>
            <i class="material-icons text-danger">remove_circle</i>
          <% end %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


