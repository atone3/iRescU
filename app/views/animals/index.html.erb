<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<%= link_to 'New Animal', new_animal_path, :class => "btn btn-primary text-white" %>

<%= will_paginate @animals %>


<table class="table table-light">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Outcome Type</th>
      <th>Outcome Subtype</th>
      <th>Animal Type</th>
      <th>Sex</th>
      <th>Breed</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.id %></td>
        <td><%= animal.name %></td>
        <td><%= animal.birthday %></td>
        <td><%= animal.outcometype %></td>
        <td><%= animal.outcomesubtype %></td>
        <td><%= animal.animaltype %></td>
        <td><%= animal.sex %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.color %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


