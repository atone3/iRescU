<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @animal.name %>
</p>

<p>
  <strong>Intake Date:</strong>
  <%= @animal.intake_date.strftime('%-m/%-d/%Y') %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @animal.birthday %>
</p>

<% if !@animal.outcome_date.nil? %>
<p>
  <strong>Outcome date:</strong>
  <%= @animal.outcome_date.strftime('%-m/%-d/%Y') %>
</p>
<% end %>

<p>
  <strong>Outcometype:</strong>
  <%= @animal.outcometype %>
</p>

<p>
  <strong>Outcomesubtype:</strong>
  <%= @animal.outcomesubtype %>
</p>

<p>
  <strong>Animaltype:</strong>
  <%= @animal.animaltype %>
</p>

<p>
  <strong>Sex:</strong>
  <%= @animal.sex %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @animal.breed %>
</p>

<p>
  <strong>Color:</strong>
  <%= @animal.color %>
</p>


<% if !@animal.enclosure_id.nil? %>
<p>
<strong>Enclosure:</strong>
  <%= Enclosure.find_by_id(@animal.enclosure_id).name %>
</p>
<% end %>


<%= link_to 'Edit', edit_animal_path(@animal) %> |
<%= link_to 'Back', animals_path %>
