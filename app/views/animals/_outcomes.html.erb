<script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.17/d3.min.js"></script>

<script>
    var data_raw = '<%= @adoptions %>'
    var data = jQuery.parseJSON(data_raw.replace(/&quot;/g,'"'));


    //set up svg using margin conventions - we'll need plenty of room on the left for labels
    var margin = {
        top: 30,
        right: 40,
        bottom: 0,
        left: 280
    };
    
    var custom_mt = 50
    
    var calc_height = parseInt(data.length, 10) * 20;

    var width = 960 - margin.left - margin.right,
        height = calc_height - margin.top - margin.bottom;
        
    var svg = d3.select(".container:nth-child(2)").append("svg")
        .attr("width", width + margin.left + margin.right)
        .attr("height", height + custom_mt + margin.bottom )
        .append("g")
        .attr("transform", "translate(" + margin.left + "," + custom_mt + ")");

    var x = d3.scale.linear()
        .range([0, width])
        .domain([0, d3.max(data, function (d) {
            return d.totals;
        })]);
    
    var y = d3.scale.ordinal()
        .rangeRoundBands([height, 0], .1)
        .domain(data.map(function (d) {
            return d.outcometype;
        }));

    //make y axis to show bar names
    var yAxis = d3.svg.axis()
        .scale(y)
        //no tick marks
        .tickSize(0)
        .orient("left");

    var gy = svg.append("g")
        .attr("class", "y axis")
        .call(yAxis)

    var bars = svg.selectAll(".bar")
        .data(data)
        .enter()
        .append("g")

    //append rects
    bars.append("rect")
        .attr("class", "bar")
        .attr("y", function (d) {
            return y(d.outcometype);
        })
        .attr("height", y.rangeBand())
        .attr("x", 0)
        .attr("width", function (d) {
            return x(d.totals);
        });

    //add a value label to the right of each bar
    bars.append("text")
        .attr("class", "label")
        //y position of the label is halfway down the bar
        .attr("y", function (d) {
            return y(d.outcometype) + y.rangeBand() / 2 + 4;
        })
        //x position is 3 pixels to the right of the bar
        .attr("x", function (d) {
            return x(d.totals) + 3;
        })
        .text(function (d) {
            return d.totals;
        });
        
</script>
    

