<!DOCTYPE html>
<html>
  <head>
    <title>iResc-U</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= favicon_link_tag asset_path('irescu_favicon.png') %>
    
    <!-- Required meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Material icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-white">
      <div class="container my-1">
        <%= link_to root_path do %>
          <img src="assets/irescu_logo.svg" width=160 />
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-4 mr-auto">
            <li class="nav-item active">
              <%= link_to animals_path, :class => "nav-link" do %>Animals<% end %>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">Map View</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">Reporting</a>
            </li>
          </ul>
                      
          <span>
            <%= link_to 'Add New Intake', new_animal_path, :class => "btn btn-primary text-white" %>
          </span>
        </div>
    </div>
  </nav>

    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
